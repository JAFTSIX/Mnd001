<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>compra</servlet-name>
        <servlet-class>model.compra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>el_arti</servlet-name>
        <servlet-class>controller.el_arti</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>controller.test</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>carrito_serv</servlet-name>
        <servlet-class>controller.carrito_serv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>realizar_compra</servlet-name>
        <servlet-class>controller.realizar_compra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actualizar_lista</servlet-name>
        <servlet-class>controller.actualizar_lista</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>compra</servlet-name>
        <url-pattern>/compra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>el_arti</servlet-name>
        <url-pattern>/el_arti</url-pattern>
    </servlet-mapping>
    <mime-mapping>
        <extension>body</extension>
        <mime-type>text/html</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>jsp</extension>
        <mime-type>text/html</mime-type>
    </mime-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>carrito_serv</servlet-name>
        <url-pattern>/carrito_serv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>realizar_compra</servlet-name>
        <url-pattern>/realizar_compra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actualizar_lista</servlet-name>
        <url-pattern>/actualizar_lista</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>A2.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>jdbc:derby://localhost:1527/a</description>
        <res-ref-name>a</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
